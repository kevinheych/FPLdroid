<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Fragments.StatusFragment">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">


    <TableLayout
        android:id="@+id/HeaderTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TableRow
            android:id="@+id/nameRow"
            android:background="#37003c"
            android:paddingTop="8dp">

            <TextView

                android:id="@+id/teamNameText"
                android:layout_margin="8dp"
                android:padding="16dp"
                android:text="Team Name"
                android:textColor="@android:color/white"
                android:textSize="24sp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/managerText"
                android:layout_margin="4dp"
                android:padding="16dp"
                android:text="Manager Name"
                android:textColor="@android:color/white"
                android:textSize="20sp"

                />
        </TableRow>

        <TableRow
            android:id="@+id/LivePointsRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:background="#37003c"
            android:gravity="center"
            android:paddingVertical="8dp">

            <TextView

                android:id="@+id/gameweekHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Gameweek X Points"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/averageText"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="A"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/yourScoreText"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="B"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/highText"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="C"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/averageHeader"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Average"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/yourScoreHeader"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Your Score"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/highHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Highest"
                android:textSize="20sp" />
        </TableRow>


    </TableLayout>

    <TableLayout
        android:id="@+id/RankingTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:layout_weight="1"
                android:background="#37003c"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:text="Points / Rankings"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:id="@+id/overallpointsrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16sp"
            android:paddingRight="16sp">

            <TextView
                android:id="@+id/overallPoints"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="	#00ff87"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Overall Points"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/overallPointsText"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingTop="4dp"
                android:paddingRight="16dp"
                android:paddingBottom="4dp"
                android:text="H"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:id="@+id/gwrankrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16sp"
            android:paddingRight="16sp">

            <TextView
                android:id="@+id/gwPoints"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="	#00ff87"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Gameweek Points"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/gwPointsText"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingTop="4dp"
                android:paddingRight="16dp"
                android:paddingBottom="4dp"
                android:text="B"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:id="@+id/gwRankrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16sp"
            android:paddingRight="16sp">

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00ff87"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Gameweek Rank"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/gwRankText"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingTop="4dp"
                android:paddingRight="16dp"
                android:paddingBottom="4dp"
                android:text="D"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:id="@+id/overallrankrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16sp"
            android:paddingRight="16sp">

            <TextView
                android:id="@+id/overallRank"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="	#00ff87"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Overall Rank"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/overallRankText"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingTop="4dp"
                android:paddingRight="16dp"
                android:paddingBottom="4dp"
                android:text="E"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:id="@+id/totalplayersrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16sp"
            android:paddingRight="16sp">

            <TextView
                android:id="@+id/totalPlayer"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="	#00ff87"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Total Players"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/totalPlayerText"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingTop="4dp"
                android:paddingRight="16dp"
                android:paddingBottom="4dp"
                android:text="F"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:id="@+id/teamidrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16sp"
            android:paddingRight="16sp">

            <TextView
                android:id="@+id/teamID"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="	#00ff87"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Team ID"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/teamIDText"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingTop="4dp"
                android:paddingRight="16dp"
                android:paddingBottom="4dp"
                android:text="G"
                android:textSize="16sp" />
        </TableRow>

    </TableLayout>

     <TableLayout
         android:id="@+id/TransfersTable"
         android:layout_width="match_parent"
         android:layout_height="match_parent">


         <TableRow
             android:id="@+id/transferheader"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

             <TextView
                 android:layout_width="0sp"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="8sp"
                 android:layout_weight="1"
                 android:background="#37003c"
                 android:gravity="center"
                 android:paddingVertical="8dp"
                 android:text="Transfers / Finance"
                 android:textColor="@android:color/white"
                 android:textSize="20sp" />

         </TableRow>

         <TableRow
             android:id="@+id/gwtransfersrow"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingLeft="16sp"
             android:paddingRight="16sp">

             <TextView
                 android:id="@+id/gwTransfers"
                 android:layout_width="0sp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:background="	#00ff87"
                 android:paddingLeft="8dp"
                 android:paddingTop="4dp"
                 android:paddingBottom="4dp"
                 android:text="Gameweek Transfers"
                 android:textSize="16sp" />

             <TextView
                 android:id="@+id/gwTransfersText"
                 android:layout_width="0sp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:gravity="right"
                 android:paddingTop="4dp"
                 android:paddingRight="16dp"
                 android:paddingBottom="4dp"
                 android:text="I"
                 android:textSize="16sp" />
         </TableRow>

         <TableRow
             android:id="@+id/teamvaluerow"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingLeft="16sp"
             android:paddingRight="16sp">

             <TextView
                 android:id="@+id/teamValue"
                 android:layout_width="0sp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:background="	#00ff87"
                 android:paddingLeft="8dp"
                 android:paddingTop="4dp"
                 android:paddingBottom="4dp"
                 android:text="Team Value"
                 android:textSize="16sp" />

             <TextView
                 android:id="@+id/teamValueText"
                 android:layout_width="0sp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:gravity="right"
                 android:paddingTop="4dp"
                 android:paddingRight="16dp"
                 android:paddingBottom="4dp"
                 android:text="L"
                 android:textSize="16sp" />
         </TableRow>

         <TableRow
             android:id="@+id/bankrow"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingLeft="16sp"
             android:paddingRight="16sp">

             <TextView
                 android:id="@+id/ITB"
                 android:layout_width="0sp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:background="	#00ff87"
                 android:paddingLeft="8dp"
                 android:paddingTop="4dp"
                 android:paddingBottom="4dp"
                 android:text="Bank"
                 android:textSize="16sp" />

             <TextView
                 android:id="@+id/ITBText"
                 android:layout_width="0sp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:gravity="right"
                 android:paddingTop="4dp"
                 android:paddingRight="16dp"
                 android:paddingBottom="4dp"
                 android:text="K"
                 android:textSize="16sp" />
         </TableRow>

         <TableRow
             android:id="@+id/totaltransferswrow"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingLeft="16sp"
             android:paddingRight="16sp">

             <TextView
                 android:id="@+id/totalTransfers"
                 android:layout_width="0sp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:background="	#00ff87"
                 android:paddingLeft="8dp"
                 android:paddingTop="4dp"
                 android:paddingBottom="4dp"
                 android:text="Total Transfers"
                 android:textSize="16sp" />

             <TextView
                 android:id="@+id/totalTransfersText"
                 android:layout_width="0sp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:gravity="right"
                 android:paddingTop="4dp"
                 android:paddingRight="16dp"
                 android:paddingBottom="4dp"
                 android:text="J"
                 android:textSize="16sp" />
         </TableRow>

         <TableRow
             android:id="@+id/wcrow"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingLeft="16sp"
             android:paddingRight="16sp">

             <TextView
                 android:id="@+id/wildcard"
                 android:layout_width="0sp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:background="	#00ff87"
                 android:paddingLeft="8dp"
                 android:paddingTop="4dp"
                 android:paddingBottom="4dp"
                 android:text="Wildcard"
                 android:textSize="16sp" />

             <TextView
                 android:id="@+id/wildcardText"
                 android:layout_width="0sp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:gravity="right"
                 android:paddingTop="4dp"
                 android:paddingRight="16dp"
                 android:paddingBottom="4dp"
                 android:text="M"
                 android:textSize="16sp" />

         </TableRow>

         <TableRow
             android:id="@+id/freehitrow"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingLeft="16sp"
             android:paddingRight="16sp">

             <TextView
                 android:id="@+id/freehit"
                 android:layout_width="0sp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:background="	#00ff87"
                 android:paddingLeft="8dp"
                 android:paddingTop="4dp"
                 android:paddingBottom="4dp"
                 android:text="Freehit"
                 android:textSize="16sp" />

             <TextView
                 android:id="@+id/freehitText"
                 android:layout_width="0sp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:gravity="right"
                 android:paddingTop="4dp"
                 android:paddingRight="16dp"
                 android:paddingBottom="4dp"
                 android:text="N"
                 android:textSize="16sp" />
         </TableRow>

         <TableRow
             android:id="@+id/bbrow"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingLeft="16sp"
             android:paddingRight="16sp">

             <TextView
                 android:id="@+id/benchboost"
                 android:layout_width="0sp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:background="	#00ff87"
                 android:paddingLeft="8dp"
                 android:paddingTop="4dp"
                 android:paddingBottom="4dp"
                 android:text="Bench Boost"
                 android:textSize="16sp" />

             <TextView
                 android:id="@+id/benchboostText"
                 android:layout_width="0sp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:gravity="right"
                 android:paddingTop="4dp"
                 android:paddingRight="16dp"
                 android:paddingBottom="4dp"
                 android:text="O"
                 android:textSize="16sp" />
         </TableRow>


     </TableLayout>

 </LinearLayout>
</ScrollView>